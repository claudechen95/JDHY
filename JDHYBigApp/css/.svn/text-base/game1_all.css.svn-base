.mui-content {
	background-color: rgba(0, 0, 0, 0);
}
#game-img {
	position: absolute;
	width: 1060px;
	height: 640px;
	margin: 20px 10px 0 10px;
	z-index: 2;
}
#introduction {
	position: absolute;
	top: 680px;
	width: 1060px;
	height: 370px;
	background: rgba(255, 255, 255, 0.5);
	padding: 50px;
	margin: 0 10px;
	color: #000000;
	font-size: 30px;
	line-height: 50px;
	z-index: 2;
}
.tip {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 4;
	display: none;
}
.tip .tip-bk {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 5;
	float: left;
}
.tip .tip-title {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 5;
	width: 1080px;
	height: 500px;
	line-height: 100px;
	padding: 150px 20px 20px 20px;
	font-size: 50px;
	text-align: center;
	background-color: rgba(255, 255, 255, 0.7);
	color: red;
}
.tip .tip-img {
	position: absolute;
	top: 500px;
	left: 0;
	z-index: 5;
	width: 1080px;
	height: 640px;
}
.key {
	position: absolute;
	top: 1800px;
	left: 0;
	z-index: 3;
	color: white;
}